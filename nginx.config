server {
    listen 80;
    server_name example.com;

    # --- WebSocket proxy for ports 3000-3999 ---
    if ($uri ~ "^/ws/(3[0-9]{3})(/.*)?$") {
        set $target_port $1;
        set $target_path $2;
    }

    if ($target_port !~ "^3[0-9]{3}$") {
        set $target_port "";
        set $target_path "";
    }

    location ~ ^/ws/3[0-9]{3} {
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;

        proxy_pass http://127.0.0.1:$target_port$target_path;
    }

    # --- API for port 8080 ---
    location /get {
        proxy_pass http://127.0.0.1:8080/get;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /kill {
        proxy_pass http://127.0.0.1:8080/kill;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # --- Optional: default redirect ---
    location / {
        return 404 "Invalid path";
    }
}
